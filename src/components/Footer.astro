---
import SectionContainer from "./SectionContainer.astro";
import ButtonGroup from "./button/ButtonGroup.astro";
import { Icon } from "astro-icon";
import { Image } from "@astrojs/image/components";

const { footerNavData } = Astro.props;
const date = new Date();
const year = date.getFullYear();
---

<footer id="footer" class="bg-white">
    {/* Footer Links */}
    <SectionContainer class="footer--container wrap wrap-px relative z-10">
        <div class="footer--content-container py-16">
            <div
                class="footer-links mb-12 grid grid-cols-2 gap-8 md:mb-16 md:grid-cols-8 lg:grid-cols-12"
            >
                <div class="col-span-6">
                    <div class="footer--logo grid gap-8">
                        <h2 class="logo mb-0 text-3xl font-extrabold italic">
                            Uptitude<span class="text-pink-600">.</span>
                        </h2>
                        <div
                            class="absolute bottom-0 flex flex-wrap lg:space-x-10 lg:translate-y-7 mb-40 translate-y-56 lg:mb-0"
                        >
                            <img
                                class="w-56 h-14 lg:mb-0 mb-7"
                                src="https://res.cloudinary.com/dnmlszkih/image/upload/v1706026314/iqehusa8b2l5xdyjubgf.png"
                                alt=""
                            />
                            <img
                                class="w-28 h-14"
                                src="https://res.cloudinary.com/dnmlszkih/image/upload/v1706026555/yifow75yq6pzoskyojgj.jpg"
                                alt=""
                            />
                            <img
                                class="w-48 h-30 -translate-y-7"
                                src="https://res.cloudinary.com/dnmlszkih/image/upload/v1706025981/pstxitj0uzzqjsq1cznv.png"
                                alt=""
                            />
                            <img
                                class="w-48 h-12"
                                src="https://res.cloudinary.com/dnmlszkih/image/upload/v1706027481/nzkikoai1bmnht3ihrot.png"
                                alt=""
                            />
                        </div>
                    </div>
                </div>
                <div class="col-span-6">
                    <div
                        class="footer-menu grid grid-cols-2 md:grid-cols-8 lg:grid-cols-12"
                    >
                        {
                            footerNavData.map((footerLinks) => (
                                <div class="footer-menu--container col-span-1 md:col-span-4">
                                    <h3 class="font-bold text-base mb-2">
                                        {footerLinks.title}
                                    </h3>
                                    <ul class="footer-menu--list">
                                        {footerLinks.items.map((footerItem) => (
                                            <li class="footer-menu--list-item gap-2">
                                                <a
                                                    class="mb-2 block w-auto font-medium transition-colors duration-300 hover:text-secondary-700"
                                                    href={footerItem.href}
                                                    target={footerItem.target}
                                                >
                                                    {footerItem.label}
                                                </a>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </SectionContainer>
    {/* Footer Credits */}
    <SectionContainer class="footer-credits relative z-10">
        <div class="wrap wrap-px py-6">
            <p class="my-0">
                Â© {year} Uptitude. All rights reserved
            </p>
        </div>
    </SectionContainer>
    <div class="footer--background"></div>
</footer>
